{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
	the {body} of the default.hbs template, which contains our header/footer. }}


	<main id="home" class="main" role="main">
		<div id="article_Parent" class="section articles container ">
			{{#get "posts"}}
			{{#foreach posts }}
				{{#if @first}}
				<div class="container">
				  <article class=" {{post_class}} col-lg-8 col-md-8 col-sm-4 home_first_post" >
				    <header>
				      {{#if image}}
				        <a href="{{url}}" class="">
				            <img src="{{image}}" alt="" class="home_first_responsive"style="width:100%;height:253px">
				            <div class="first_title">
				              {{title}}
				            </div>
				        </a>
				      {{/if}}
				    </header>
				  </article>
				</div>
				<div class="clear"></div>

				{{else}}
				<article class=" {{post_class}} col-md-4 home_following_posts post-{{@index}} " id= >
					<header>
						{{#if image}}
							<a href="{{url}}" class="">
									<img src="{{image}}" alt="" class="home_following_responsive"style="width:100%;height:250px">
									<div class="main_following_titles">
										{{title}}
									</div>
							</a>
						{{/if}}
					</header>
				</article>
				{{/if}}
			{{/foreach}}

			{{/get}}
		</div>
	</main>
